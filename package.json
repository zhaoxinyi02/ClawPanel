{
  "name": "openclaw-im-manager",
  "version": "2.0.0",
  "description": "OpenClaw IM Manager - QQ + 微信双通道 AI 助手，Docker 一键部署，扫码即用",
  "private": true,
  "scripts": {
    "dev:server": "cd server && npx tsx watch src/index.ts",
    "dev:web": "cd web && npm run dev",
    "build:server": "cd server && npx tsc",
    "build:web": "cd web && npm run build",
    "build": "npm run build:server && npm run build:web",
    "start": "cd server && node dist/index.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": ["qq", "wechat", "bot", "napcat", "onebot", "openclaw", "ai", "管理后台", "docker", "im"],
  "author": "zhaoxinyi02",
  "license": "MIT"
}
